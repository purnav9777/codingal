 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Car Dodger Game</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
      background: #222;
    }
    #gameArea {
      width: 400px;
      height: 600px;
      background: #333;
      margin: 20px auto;
      position: relative;
      border: 4px solid #fff;
    }
    #car {
      width: 50px;
      height: 80px;
      background: red;
      position: absolute;
      bottom: 10px;
      left: 175px;
      border-radius: 8px;
    }
    .obstacle {
      width: 50px;
      height: 80px;
      background: yellow;
      position: absolute;
      top: 0;
      border-radius: 8px;
    }
    #score {
      color: white;
      text-align: center;
      font-size: 24px;
      margin-top: 10px;
      font-family: Arial, sans-serif;
    }
  </style>
</head>
<body>

<div id="score">Score: 0</div>
<div id="gameArea">
  <div id="car"></div>
</div>

<script>
  const car = document.getElementById("car");
  const gameArea = document.getElementById("gameArea");
  const scoreEl = document.getElementById("score");

  let carLeft = 175;
  let score = 0;
  let gameRunning = true;

  // Move car left/right
  document.addEventListener("keydown", (e) => {
    if (!gameRunning) return;
    if (e.key === "ArrowLeft" && carLeft > 0) {
      carLeft -= 25;
      car.style.left = carLeft + "px";
    } else if (e.key === "ArrowRight" && carLeft < 350) {
      carLeft += 25;
      car.style.left = carLeft + "px";
    }
  });

  // Create obstacles
  function createObstacle() {
    const obstacle = document.createElement("div");
    obstacle.classList.add("obstacle");
    obstacle.style.left = Math.floor(Math.random() * 8) * 50 + "px";
    gameArea.appendChild(obstacle);

    let obstacleTop = 0;
    const fall = setInterval(() => {
      if (!gameRunning) {
        clearInterval(fall);
        obstacle.remove();
        return;
      }

      obstacleTop += 5;
      obstacle.style.top = obstacleTop + "px";

      // Collision detection
      if (
        obstacleTop + 80 >= 510 &&
        parseInt(obstacle.style.left) === carLeft
      ) {
        alert("ðŸ’¥ Game Over!\nFinal Score: " + score);
        gameRunning = false;
        clearInterval(fall);
        obstacle.remove();
      }

      if (obstacleTop > 600) {
        obstacle.remove();
      }
    }, 30);
  }

  // Score and loop
  setInterval(() => {
    if (gameRunning) {
      score++;
      scoreEl.textContent = "Score: " + score;
    }
  }, 500);

  // Spawn obstacles every second
  setInterval(() => {
    if (gameRunning) {
      createObstacle();
    }
  }, 1000);
</script>

</body>
</html>
